<% if @projects.present? %>
    <h1>Listing projects</h1>

    <table>
      <thead>
      <tr>
        <th>Name</th>
        <th>Title</th>
        <th>User</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.title %></td>
            <td><%= project.user_id %></td>
            <td><%= project.status %></td>
            <td><%= link_to t('Open'), create_url('projects', project.id) %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    Проектов не найдено
<% end %>

<br>

<%= link_to 'New Project', create_url(new_project_path) %>